        print("    I")
        print("   /  ")
        print ("one last chance")
    elif lives = 0
        print ("    o")
        print(" /  I  \ ")
        print("    I")
        print("   / \ ")



#Code to confirm that it is actually only letters


def check_valid_word(string):
    if (string.isalpha()) == True:
        return True
    else:
        while not (string.isalpha()) == True:
            print("Please enter a valid word")
            string = input("What word:")

